{
  "name": "@cocalc/fuse-native",
  "version": "3.0.0-alpha.1",
  "description": "Modern FUSE3 Node.js bindings with N-API, TypeScript, and BigInt support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "fuse-native": "./dist/bin.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm run build:native && pnpm run build:ts",
    "build:native": "cmake-js compile --runtime-version=$(node -v | cut -c 2-)",
    "build:native:debug": "cmake-js compile --runtime-version=$(node -v | cut -c 2-) --debug",
    "build:ts": "tsc -p tsconfig.json",
    "clean": "rm -rf build dist node_modules",
    "clean:build": "rm -rf build dist",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts,.js ts/ test/ --fix",
    "lint:check": "eslint --ext .ts,.js ts/ test/",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test:types": "tsd",
    "dev": "tsc --watch",
    "prepare": "pnpm run build",
    "prebuild": "prebuildify --napi --strip",
    "prebuild:all": "prebuildify --napi --strip --arch=x64 --arch=arm64"
  },
  "files": [
    "dist/",
    "src/",
    "CMakeLists.txt",
    "prebuilds/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "cmake-js": "^7.3.1",
    "node-addon-api": "^8.5.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prebuildify": "^6.0.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsd": "^0.33.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagemathinc/fuse-native.git"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", { "useESM": true }]
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "author": "FUSE Native Contributors",
  "contributors": [
    {
      "name": "Mathias Buus",
      "email": "@mafintosh"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sagemathinc/fuse-native/issues"
  },
  "homepage": "https://github.com/sagemathinc/fuse-native#readme",
  "keywords": [
    "fuse",
    "fuse3",
    "filesystem",
    "userspace",
    "n-api",
    "typescript",
    "bigint",
    "native",
    "addon"
  ],
  "packageManager": "pnpm@8.0.0"
}
