{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "fuse-native": ["../ts/index.ts"],
      "fuse-native/*": ["../ts/*"]
    }
  },
  "include": [
    "src/**/*",
    "../ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../node_modules",
    "../dist"
  ]
}
